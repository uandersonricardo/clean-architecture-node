{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,  
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@adapters/*": ["./src/adapters/*"],
      "@core/*": ["./src/core/*"],
      "@infra/*": ["./src/infra/*"],
      "@presentation/*": ["./src/presentation/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
